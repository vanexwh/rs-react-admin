{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["DOM", "ES2020"],
		"module": "ESNext",
		"jsx": "react-jsx",
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"useDefineForClassFields": true,
		"allowImportingTsExtensions": true,
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
			"@src/*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@apis/*": ["./src/apis/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@store/*": ["./src/store/*"],
			"@theme/*": ["./src/theme/*"],
			"@types/*": ["./src/types/*"],
			"@utils/*": ["./src/utils/*"],
			"@pages/*": ["./src/pages/*"]
		}
	},
	"include": ["src"]
}
